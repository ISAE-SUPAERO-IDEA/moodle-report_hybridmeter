{{!
    @template report/hybridmeter

    Template for displaying the indicators provided by the general report.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "measurement_period": " from 26/09/2023 to 31/12/2023.",
        "value_digitalised_course": 15,
        "value_used_course": 10,
        "value_nb_analysed_courses": 20,
        "value_digitalisation_registered_students": 506,
        "value_digitalisation_active_students": 200,
        "value_usage_registered_students": 379,
        "value_usage_active_students": 179,
        "processing_date": " 03/09/2024"
    }
}}
<div class="indicators-section">
    <h3 class="main">{{#str}} last_processing_results, report_hybridmeter {{/str}}</h3>
    <p>{{#str}} measurement_period_intro, report_hybridmeter {{/str}} {{measurement_period}}<br>
        <i>{{#str}} measurement_disclaimer, report_hybridmeter {{/str}}</i>
    </p>
    <table>
        <thead>
            <tr>
                <th>{{#str}} indicator_name, report_hybridmeter {{/str}}</th>
                <th>{{#str}} number, report_hybridmeter {{/str}}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{#str}} nb_digitalised_courses, report_hybridmeter {{/str}}</td>
                <td>{{value_digitalised_course}}</td>
            </tr>
            <tr>
                <td>{{#str}} nb_used_courses, report_hybridmeter {{/str}}</td>
                <td>{{value_used_course}}</td>
            </tr>
            <tr>
                <td>{{#str}} nb_analysed_courses, report_hybridmeter {{/str}}</td>
                <td>{{value_nb_analysed_courses}}</td>
            </tr>
            <tr>
                <td>{{#str}} nb_students_concerned_digitalised, report_hybridmeter {{/str}} {{processing_date}}</td>
                <td>{{value_digitalisation_registered_students}}</td>
            </tr>
            <tr>
                <td>{{#str}} nb_students_concerned_digitalised_active, report_hybridmeter {{/str}} {{measurement_period}}</td>
                <td>{{value_digitalisation_active_students}}</td>
            </tr>
            <tr>
                <td>{{#str}} nb_students_concerned_used, report_hybridmeter {{/str}} {{processing_date}}</td>
                <td>{{value_usage_registered_students}}</td>
            </tr>
            <tr>
                <td>{{#str}} nb_students_concerned_used_active, report_hybridmeter {{/str}} {{measurement_period}}</td>
                <td>{{value_usage_active_students}}</td>
            </tr>
        </tbody>
    </table>
    <p>{{end_processing}}<br>
    {{processing_duration}}</p>
</div>