<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="report/hybridmetrics/db" VERSION="20210830" COMMENT="XMLDB file for Moodle report/hybridmetrics"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="report_hybridmetrics_blcours" COMMENT="Blacklisted courses">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="id_course" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="The ID of the course"/>
        <FIELD NAME="blacklisted" TYPE="binary" NOTNULL="false" SEQUENCE="false" COMMENT="1 if blacklisted, 0 if not"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="foreign_id_course" TYPE="foreign" FIELDS="id_course" REFTABLE="course" REFFIELDS="id" COMMENT="We need only one entry per course"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="report_hybridmetrics_blcat" COMMENT="Blacklisted categories">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="id_category" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="ID of the category"/>
        <FIELD NAME="blacklisted" TYPE="binary" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="foreign_id_category" TYPE="foreign" FIELDS="id_category" REFTABLE="course_categories" REFFIELDS="id" COMMENT="We don't want several entries for the same category"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="report_hybridmetrics_coeff" COMMENT="Coefficients for each activities">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="id_module" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="The ID of the module type we want to link the coefficient"/>
        <FIELD NAME="coefficient" TYPE="int" LENGTH="3" NOTNULL="false" SEQUENCE="false" COMMENT="Coefficient of the activity type"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="foreign_id_module" TYPE="foreign-unique" FIELDS="id_module" REFTABLE="modules" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="report_hybridmetrics_logs" COMMENT="Keep every calculation history">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="timestamp" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="backup_path" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="report_hybridmetrics_running" COMMENT="To check if a task is running">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="timestamp" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>